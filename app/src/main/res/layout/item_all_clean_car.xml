<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:cardCornerRadius="4dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv"
            android:layout_width="57dp"
            android:layout_height="57dp"
            android:layout_marginLeft="@dimen/dp12"
            android:layout_marginTop="@dimen/dp10"
            android:scaleType="fitXY"
            android:src="@mipmap/placeholder"
            />

        <TextView
            android:id="@+id/tv_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv"
            android:layout_marginLeft="@dimen/dp8"
            android:layout_toRightOf="@+id/iv"
            android:ellipsize="end"
            android:maxEms="14"
            android:singleLine="true"
            android:text="新航线"
            android:textColor="#000000"
            android:textSize="12sp"
            />

        <TextView
            android:id="@+id/tv_join"
            android:layout_width="25dp"
            android:layout_height="13dp"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/iv"
            android:layout_marginRight="@dimen/dp10"
            android:background="@drawable/shape_join_in_bg"
            android:gravity="center"
            android:text="加盟"
            android:textColor="@color/color_666"
            android:textSize="8sp"
            />

        <TextView
            android:id="@+id/tv_shop_project"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_shop_name"
            android:layout_below="@+id/tv_shop_name"
            android:layout_marginTop="@dimen/dp6"
            android:text="标准洗车"
            android:textColor="@color/color_666"
            android:textSize="10sp"
            />

        <TextView
            android:id="@+id/tv_shop_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_shop_project"
            android:layout_below="@+id/tv_shop_project"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="@dimen/dp6"
            android:gravity="center_vertical"
            android:text="￥128"
            android:textColor="@color/red"
            android:textSize="12dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_shop_price2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_shop_price"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@+id/tv_shop_price"
            android:gravity="center_vertical"
            android:text="128"
            android:textColor="@color/color_666"
            android:textSize="10dp"/>

        <TextView
            android:id="@+id/member"
            android:layout_width="39dp"
            android:layout_height="13dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_join"
            android:layout_marginRight="@dimen/dp10"
            android:layout_marginTop="@dimen/dp8"
            android:background="@drawable/shape_all_clean_car_member_bg"
            android:gravity="center"
            android:text="会员5折"
            android:textColor="@color/white"
            android:textSize="8sp"
            />

        <TextView
            android:id="@+id/coupon"
            android:layout_width="33dp"
            android:layout_height="13dp"
            android:layout_alignTop="@+id/member"
            android:layout_marginRight="4dp"
            android:layout_toLeftOf="@+id/member"
            android:background="@drawable/shape_all_clean_car_coupon_bg"
            android:gravity="center"
            android:text="优惠券"
            android:textColor="@color/red"
            android:textSize="8sp"
            />

        <TextView
            android:id="@+id/distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/member"
            android:layout_marginRight="@dimen/dp10"
            android:layout_marginTop="@dimen/dp8"
            android:text="3.5KM"
            android:textColor="@color/color_666"
            android:textSize="10sp"
            />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/distance"
            android:layout_marginLeft="@dimen/dp8"
            android:layout_marginTop="@dimen/dp10"
            android:layout_toRightOf="@+id/iv"
            android:background="#F2F2F2"
            />

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:layout_alignLeft="@+id/view"
            android:layout_below="@+id/view"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="11dp"
                android:layout_height="10dp"
                android:background="@mipmap/dw_h"
                />

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:ellipsize="end"
                android:maxEms="20"
                android:singleLine="true"
                android:text="上海南桥路上海南桥路上海南桥路上海南桥路上海南桥路上海南桥路"
                android:textColor="@color/color_666"
                android:textSize="10sp"
                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/ll"
            android:background="#F2F2F2"
            />
    </RelativeLayout>
</android.support.v7.widget.CardView>